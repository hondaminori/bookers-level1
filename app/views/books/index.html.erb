<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |f| %>
    <tr>
      <td><%= f.title %></td>
      <td><%= f.body %></td>
      <td><%= link_to "show", book_path(f.id) %></td>
      <td><%= link_to "edit", edit_book_path(f.id) %></td>
      <td><%= link_to "destroy", book_path(f.id), method: :delete, data: { confirm: 'Are you sure ?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<%= render 'form', book: @book %>

<%= form_for @book do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_title">Body</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit "Create Book" %>
<% end %>